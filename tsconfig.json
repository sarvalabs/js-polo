{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules", 
    "__tests__",
    "__benchmarks__"
  ],
  "files": ["src/index.ts"]
}